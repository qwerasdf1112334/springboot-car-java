<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.changge.car.mapper.CarResourcesMapper">
    <!--保存对象-->
    <insert id="insert" parameterType="CarResources" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
        insert into t_car_car_resources(
                            car_id,
                            resource_url,
                            resource_type
        ) values(
                                   #{carId},
                                   #{resourceUrl},
                                   #{resourceType}
        )
    </insert>
    <!--删除对象-->
    <delete id="delete" parameterType="long">
        delete from t_car_car_resources where id = #{id}
    </delete>

    <!--更新对象-->
    <update id="update" parameterType="CarResources">
        update t_car_car_resources
        set

                            car_id =#{car_id},
                            resource_url =#{resource_url},
                            resource_type =#{resource_type}
        where id = #{id}
    </update>
    <!--加载对象-->
    <select id="queryById" resultType="CarResources" parameterType="long">
        select id, car_id, resource_url, resource_type from t_car_car_resources where id = #{id}
    </select>
    <!--加载所有对象-->
    <select id="queryAll" resultType="CarResources">
        select * from t_car_car_resources
    </select>
    <!--//查询总数=参数（查询对象），返回值：long-->
    <select id="queryTotal" parameterType="CarResourcesQuery" resultType="long">
        select count(*) from t_car_car_resources
        <include refid="whereSql"/>
    </select>
    <!--//查询当前页数据=参数（查询对象），返回值:List-->
    <select id="queryPage" parameterType="CarResourcesQuery" resultType="CarResources">
        select * from t_car_car_resources
        <include refid="whereSql"/>
        limit #{start},#{pageSize}
    </select>
    <select id="queryByCarId" resultMap="BaseResultMap">
        select id, car_id, resource_url, resource_type from t_car_car_resources where car_id=#{id}
    </select>


    <sql id="whereSql">
        <where>
            <if test="keyword!=null and keyword!=''">
                and (name like concat('%',#{keyword},'%'))
            </if>
        </where>
    </sql>

    <!--//批量删除-->
    <delete id="batchDelete" parameterType="arraylist">
        delete from t_car_car_resources where id in
        <foreach collection="list" item="id" open="(" close=")" separator=",">
            #{id}
        </foreach>
    </delete>
    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="cn.changge.car.domain.CarResources">
        <id column="id" property="id" />
        <result column="car_id" property="carId" />
        <result column="resource_url" property="resourceUrl" />
        <result column="resource_type" property="resourceType" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, car_id AS carId, resource_url AS resourceUrl, resource_type AS resourceType
    </sql>

</mapper>
