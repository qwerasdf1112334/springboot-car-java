<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.changge.car.mapper.CarMapper">
    <!--保存对象-->
    <insert id="insert" parameterType="Car" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
        insert into t_car_car(
                            title,
                            cover,
                            saleprice,
                            costprice,
                            isnew,
                            reigstertime,
                            mileage,
                            shop_id,
                            shopname,
                            createtime,
                            onsaletime,
                            offsaletime,
                            state,
                            costeffective,
                            rushsale,
                            quasinewcar,
                            transitivecountry,
                            type_id,
                            seller_id,
                            user_id,
                            search_master_msg_id,
                            auditstate,
                            brand
        ) values(
                                   #{title},
                                   #{cover},
                                   #{saleprice},
                                   #{costprice},
                                   #{isnew},
                                   #{reigstertime},
                                   #{mileage},
                                   #{shopId},
                                   #{shopname},
                                   #{createtime},
                                   #{onsaletime},
                                   #{offsaletime},
                                   #{state},
                                   #{costeffective},
                                   #{rushsale},
                                   #{quasinewcar},
                                   #{transitivecountry},
                                   #{typeId},
                                   #{sellerId},
                                   #{userId},
                                   #{searchMasterMsgId},
                                   #{auditstate},
                                   #{brand}
        )
    </insert>
    <!--删除对象-->
    <delete id="delete" parameterType="long">
        delete from t_car_car where id = #{id}
    </delete>

    <!--更新对象-->
    <update id="update" parameterType="Car">
        update t_car_car
        set

                            title =#{title},
                            cover =#{cover},
                            saleprice =#{saleprice},
                            costprice =#{costprice},
                            isnew =#{isnew},
                            reigstertime =#{reigstertime},
                            mileage =#{mileage},
                            shop_id =#{shop_id},
                            shopname =#{shopname},
                            createtime =#{createtime},
                            onsaletime =#{onsaletime},
                            offsaletime =#{offsaletime},
                            state =#{state},
                            costeffective =#{costeffective},
                            rushsale =#{rushsale},
                            quasinewcar =#{quasinewcar},
                            transitivecountry =#{transitivecountry},
                            type_id =#{type_id},
                            seller_id =#{seller_id},
                            user_id =#{user_id},
                            search_master_msg_id =#{search_master_msg_id},
                            auditstate =#{auditstate},
                            brand =#{brand}
        where id = #{id}
    </update>
    <update id="updateOnSale">
        update t_car_car
        set  state =1,onsaletime=now()
        where id in
    <foreach collection="list" item="id" separator="," open="(" close=")">
        #{id}
    </foreach>
    </update>
    <!--加载对象-->
    <select id="queryById" resultType="Car" parameterType="long">
        select * from t_car_car where id = #{id}
    </select>
    <!--加载所有对象-->
    <select id="queryAll" resultType="Car">
        select * from t_car_car
    </select>
    <!--//查询总数=参数（查询对象），返回值：long-->
    <select id="queryTotal" parameterType="CarQuery" resultType="long">
        select count(*) from t_car_car
        <include refid="whereSql"/>
    </select>
    <!--//查询当前页数据=参数（查询对象），返回值:List-->
    <select id="queryPage" parameterType="CarQuery" resultType="Car">
        select * from t_car_car
        <include refid="whereSql"/>
        limit #{start},#{pageSize}
    </select>
    <select id="queryByIds" resultType="cn.changge.car.domain.Car">
        SELECT c.*,d.id did,d.info,s.id sid,s.address,s.lat,s.lng,t.id tid,t.name tname
        FROM t_car_car c
        LEFT JOIN t_car_car_detail d on c.id=d.car_id
        LEFT JOIN t_org_shop s ON s.id=c.shop_id
        left join t_car_car_type t on c.type_id = t.id
        where c.id in
        <foreach collection="list" item="id" separator="," open="(" close=")" >
            #{id}
        </foreach>
    </select>


    <sql id="whereSql">
        <where>
            <if test="keyword!=null and keyword!=''">
                and (name like concat('%',#{keyword},'%'))
            </if>
        </where>
    </sql>

    <!--//批量删除-->
    <delete id="batchDelete" parameterType="arraylist">
        delete from t_car_car where id in
        <foreach collection="list" item="id" open="(" close=")" separator=",">
            #{id}
        </foreach>
    </delete>
    <!-- 通用查询映射结果 -->
    <resultMap id="baseMap" type="Car">
        <id column="id" property="id"/>
        <result column="title" property="title"/>
        <result column="cover" property="cover"/>
        <result column="saleprice" property="saleprice"/>
        <result column="costprice" property="costprice"/>
        <result column="isnew" property="isnew"/>
        <result column="reigstertime" property="reigstertime"/>
        <result column="mileage" property="mileage"/>
        <result column="shop_id" property="shopId"/>
        <result column="shopname" property="shopname"/>
        <result column="createtime" property="createtime"/>
        <result column="onsaletime" property="onsaletime"/>
        <result column="offsaletime" property="offsaletime"/>
        <result column="state" property="state"/>
        <result column="costeffective" property="costeffective"/>
        <result column="rushsale" property="rushsale"/>
        <result column="quasinewcar" property="quasinewcar"/>
        <result column="transitivecountry" property="transitivecountry"/>
        <result column="type_id" property="typeId"/>
        <result column="seller_id" property="sellerId"/>
        <result column="user_id" property="userId"/>
        <result column="search_master_msg_id" property="searchMasterMsgId"/>
        <result column="auditstate" property="auditstate"/>
        <result column="brand" property="brand"/>
        <association property="carDetail" javaType="CarDetail">
            <id column="did" property="id"/>
            <result column="info" property="info"/>
        </association>
        <association property="carType" javaType="CarType">
            <id column="tid" property="id"/>
            <result column="tname" property="name"/>
        </association>
        <association property="shop" javaType="Shop">
            <id column="sid" property="id"/>
            <result column="address" property="address"/>
            <result column="lat" property="lat"/>
            <result column="lng" property="lng"/>
        </association>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, title, cover, saleprice, costprice, isnew, reigstertime, mileage, shop_id AS shopId, shopname, createtime, onsaletime, offsaletime, state, costeffective, rushsale, quasinewcar, transitivecountry, type_id AS typeId, seller_id AS sellerId, user_id AS userId, search_master_msg_id AS searchMasterMsgId, auditstate, brand
    </sql>

</mapper>
