<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.changge.org.mapper.ShopMapper">
    <!--保存对象-->
    <insert id="insert" parameterType="Shop" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
        insert into t_org_shop(
                            name,
                            tel,
                            registerTime,
                            state,
                            address,
                            logo,
                            lat,
                            lng
        ) values(
                                   #{name},
                                   #{tel},
                                   NOW(),
                                   #{state},
                                   #{address},
                                   #{logo},
                                   #{lat},
                                   #{lng}
        )
    </insert>
    <!--删除对象-->
    <delete id="delete" parameterType="long">
        delete from t_org_shop where id = #{id}
    </delete>

    <!--更新对象-->
    <update id="update" parameterType="Shop">
        update t_org_shop
        set

                            name =#{name},
                            tel =#{tel},
                            registerTime =#{registerTime},
                            state =#{state},
                            address =#{address},
                            logo =#{logo},
                              lat=    #{lat},
                               lng=    #{lng}
        where id = #{id}
    </update>
    <!--加载对象-->
    <select id="queryById" resultType="Shop" parameterType="long">
        select * from t_org_shop where id = #{id}
    </select>
    <!--加载所有对象-->
    <select id="queryAll" resultType="Shop">
        select * from t_org_shop
    </select>
    <!--//查询总数=参数（查询对象），返回值：long-->
    <select id="queryTotal" parameterType="ShopQuery" resultType="long">
        select count(*) from t_org_shop
        <include refid="whereSql"/>
    </select>
    <!--//查询当前页数据=参数（查询对象），返回值:List-->
    <select id="queryPage" parameterType="ShopQuery" resultType="Shop">
        select * from t_org_shop
        <include refid="whereSql"/>
        limit #{start},#{pageSize}
    </select>
    <select id="queryByEmpId" resultType="cn.changge.org.domain.Shop">
        select * from t_org_shop s left join t_org_shop_employee tose on s.id = tose.shop_id where tose.employee_id=#{id};
    </select>


    <sql id="whereSql">
        <where>
            <if test="keyword!=null and keyword!=''">
                and (name like concat('%',#{keyword},'%'))
            </if>
        </where>
    </sql>

    <!--//批量删除-->
    <delete id="batchDelete" parameterType="arraylist">
        delete from t_org_shop where id in
        <foreach collection="ids" item="id" open="(" close=")" separator=",">
            #{id}
        </foreach>
    </delete>
    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="cn.changge.org.domain.Shop">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="tel" property="tel" />
        <result column="registerTime" property="registerTime" />
        <result column="state" property="state" />
        <result column="address" property="address" />
        <result column="logo" property="logo" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, name, tel, registerTime, state, address, logo
    </sql>

</mapper>
